{% extends 'base.html.twig' %}

{% block title %}Panel Admin{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row mt-4">
                <h1 class="h3 mb-3 font-weight-normal">Panel Admin</h1>
                {% for message in app.flashes('notification') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for user in users|reverse %}
                    <ul class="list-group m-2">
                        <li class="list-group-item">
                            <span class="text-secondary text-small">#{{ user.id }}</span>
                            <span class="text-capitalize">{{ user.username }}</span> -
                            {{ user.email }}
                        </li>
                        <li class="list-group-item">
                            <a href="{{ path("app_admin_update", {"id": user.id })}}" class="text-primary">Modifier</a>
                            {% if app.user.id == user.id %}
                            {% else %}
                                <a href="{{ path('app_admin_delete', {"id": user.id}) }}" class="text-danger mr-1">Supprimer</a>
                            {% endif %}

                        </li>
                    </ul>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
