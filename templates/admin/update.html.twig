{% extends 'base.html.twig' %}

{% block title %}Panel Admin{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row mt-4">
                <h1 class="h3 mb-3 font-weight-normal">Modifier un utilisateur</h1>
                {% for message in app.flashes('notification') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                <ul class="list-group m-2">
                    <li class="list-group-item">
                        <span class="text-secondary text-small">#{{ user.id }}</span>
                        <span class="text-capitalize">{{ user.username }}</span> - {{ user.email }}
                    </li>
                    <li class="list-group-item"><br/>
                        <h5>Modifier :</h5>
                        {{ form_start(form) }}
                        {{ form_row(form.username, {"attr": {'class': 'form-control mb-3', 'placeholder': 'Pseudo'} }) }}
                        {{ form_row(form.email, {"attr": {'class': 'form-control mb-3', 'placeholder': 'Email'} }) }}
                        {{ form_row(form.roles, {"attr": {'class': 'form-control mb-3'} }) }}
                        <button class="btn btn-success">Modifier</button>
                        {{ form_end(form) }}
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
