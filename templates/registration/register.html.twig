{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row mt-4">
                <h1 class="h3 mb-3 font-weight-normal">Inscrivez-vous</h1>
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {"attr": {'class': 'form-control mb-3', 'placeholder': 'Email'} }) }}
                    {{ form_row(registrationForm.username, {"attr": {'class': 'form-control mb-3', 'placeholder': 'Pseudo'} }) }}
                    {{ form_row(registrationForm.plainPassword, {"attr": {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'} }) }}
                    {{ form_row(registrationForm.roles, {"attr": {'class': 'form-control mb-3'} }) }}
                    <button class="btn btn-success mt-2" type="submit">
                        S'inscrire
                    </button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
